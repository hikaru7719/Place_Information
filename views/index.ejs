<!DOCTYPE html>
<html lang="ja">
<body>
<% if(session){ %>
<% include header %>
<% }else{ %>
<% include before_login_header %>
<% } %>

<div class="container">
<h2>User Regist</h2>
  <form  class="form-horizontal"action="./addUser" method="post">

  <div class="form-group">
  <label class="col-sm-1 control-label">ID</label>
  <div class="col-sm-7">
  <input class="form-control" type="text" name="id" maxlength="20">
  </div>
  </div>

  <div class="form-group">
  <label class="col-sm-1 control-label">Password</label>
  <div class="col-sm-7">
  <input class="form-control" type="password" name="password" maxlength="10">
  </div>
  </div>

  <div class="form-group">
  <label class="col-sm-1 control-label">Name</label>
  <div class="col-sm-7">
  <input class="form-control" type="text" name="name" maxlength="20">
  </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-7 text-right">
    <input class="btn btn-info" type="submit" name="ok">
    </div>
  </div>
</form>
</div>
</body>
</html>
